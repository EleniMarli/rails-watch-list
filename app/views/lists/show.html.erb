<h3><%=@list.name%>:</h3>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
      <%= link_to "❌",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <%end%>
</ul>

<h2>Reviews:</h2>
<ul>
  <% @list.reviews.each do |review| %>
    <li>
      (<%= review.rating %>/5) <%= time_ago_in_words(review.created_at) %>| <%= review.comment %>
    </li>
  <%end%>
</ul>

<h6>Add a new bookmark to '<%= @list.name%>':</h6>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<h6>Add a new review to '<%= @list.name%>':</h6>

<%= simple_form_for [@list, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
